<?xml version="1.0"?>
<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="Iscorpio Themes Playground">

 <object name="iscorpio_themes_playground_custom_images"
    meta_type="Filesystem Directory View"
    directory="iscorpio.themes.playground:skins/iscorpio_themes_playground_custom_images"/>
 <object name="iscorpio_themes_playground_custom_templates"
    meta_type="Filesystem Directory View"
    directory="iscorpio.themes.playground:skins/iscorpio_themes_playground_custom_templates"/>
 <object name="iscorpio_themes_playground_styles"
    meta_type="Filesystem Directory View"
    directory="iscorpio.themes.playground:skins/iscorpio_themes_playground_styles"/>

 <skin-path name="Iscorpio Themes Playground" based-on="Plone Default">
  <layer name="iscorpio_themes_playground_custom_images"
     insert-after="custom"/>
  <layer name="iscorpio_themes_playground_custom_templates"
     insert-after="iscorpio_themes_playground_custom_images"/>
  <layer name="iscorpio_themes_playground_styles"
     insert-after="iscorpio_themes_playground_custom_templates"/>
 </skin-path>

</object>
